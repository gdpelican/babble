{{#if Discourse.SiteSettings.babble_enabled}}
  {{#unless noTopicAvailable}}
    {{#header-dropdown iconId="babble-notifications"
                       icon=Discourse.SiteSettings.babble_icon
                       toggleVisible=babbleVisible
                       loginAction="showLogin"
                       title="babble.title"}}
    {{/header-dropdown}}
    {{#if unreadCount}}
      <a href class='badge-notification unread-notifications'>{{unreadCount}}</a>
    {{/if}}
  {{/unless}}
{{/if}}
